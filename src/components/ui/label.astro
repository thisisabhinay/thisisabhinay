---
import cx from "classnames";

interface Props {
  slug: string;
  theme:
    | "green"
    | "blue"
    | "orange"
    | "purple"
    | "pink"
    | "yellow"
    | "red"
    | "teal";
  class?: string;
}
const color = {
  green: "text-lime-500",
  blue: "text-indigo-500",
  orange: "text-orange-500",
  purple: "text-purple-500",
  pink: "text-pink-500",
  yellow: "text-yellow-500",
  red: "text-red-500",
  teal: "text-teal-500",
};

const { theme, slug, class: className } = Astro.props;
---

<a
  href={`/category/${slug}`}
  class={cx(
    "inline-block mt-5 text-xs font-medium tracking-wider uppercase ",
    color[theme] || color["pink"],
    className
  )}>
  <slot />
</a>
